# CatETube Tracker Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration
# Development: postgresql://username@localhost/CatETube_DEV
# Production:  postgresql://username@localhost/CatETube_PROD
DATABASE_URL=postgresql://jesse@localhost/CatETube_DEV

# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_DEFAULT=1000 per hour

# Scheduler (set to true in production)
START_SCHEDULER=false

# Production-only settings
# SSL_REDIRECT=true
# SECURE_HEADERS=true